@model EBookStore.Models.ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container backgroundWhite">
        <div class="card" style="width: 55rem; margin: auto;">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h3 class="text-primary">@Model.Product.Title</h3>
                    <p class="text-warning">by @Model.Product.Author</p>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge bg-warning pt-3 text-center" style="height:30px; font-size: 14px;">@Model.Product.CoverType.Name</span>
                    <span class="badge bg-primary pt-3 text-center" style="height:30px; font-size: 14px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                    <h5 class="text-muted pb-2">List Price: <strike>Rs. @Model.Product.ListPrice.ToString()</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-success border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-success border-bottom">
                                    <div>1-49</div>
                                </div>
                                <div class="p-1 col-2 bg-success border-bottom">
                                    <div>50-99</div>
                                </div>
                                <div class="p-1 col-2 bg-success border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-white">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-white">
                                    @if (Model.Product.OfferName != null)
                                    {
                                        double dPrice = Model.Product.Discount;
                                        double discountedPrice = (dPrice / 100) * Model.Product.Price;
                                        discountedPrice = Model.Product.Price - discountedPrice;
                                        <div>Rs. @discountedPrice.ToString()</div>
                                    }
                                    else
                                    {
                                        <div>Rs. @Model.Product.Price.ToString()</div>
                                    }

                                </div>
                                <div class="p-1 col-2 bg-white">
                                    <div>Rs. @Model.Product.Price50.ToString()</div>
                                </div>
                                <div class="p-1 col-2 bg-white">
                                    <div>Rs. @Model.Product.Price100.ToString()</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input class="form-control" asp-for="Count" /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">

                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>